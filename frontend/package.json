{
  "name": "gitactionboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vite dev",
    "start-mock-api-server": "mockoon-cli start --data mock-data/data.json",
    "serve-with-mock-data": "concurrently --kill-others \"npm run start-mock-api-server\" \"npm run serve\" ",
    "build": "vite build",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint --ext .js,.vue --no-fix --max-warnings 0 . && stylelint '**/*.vue'",
    "lint:fix": "eslint --ext .js,.vue --fix . && stylelint '**/*.vue' --fix"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "chart.js": "^4.4.7",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chartjs-plugin-autocolors": "^0.3.1",
    "date-fns": "^4.1.0",
    "vue": "^3.5.13",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.5.0",
    "vuetify": "^3.7.7"
  },
  "devDependencies": {
    "@mockoon/cli": "^9.1.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-vue": "^9.32.0",
    "flush-promises": "^1.0.2",
    "jest-serializer-vue-tjw": "^3.20.0",
    "jsdom": "^26.0.0",
    "postcss-html": "^1.8.0",
    "stylelint": "^16.13.2",
    "stylelint-config-recommended-vue": "^1.6.0",
    "stylelint-config-standard": "^37.0.0",
    "vite": "^6.0.11",
    "vite-plugin-vuetify": "^2.0.4",
    "vitest": "^2.1.8",
    "vitest-canvas-mock": "^0.3.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "plugin:vue/base",
      "plugin:vue/vue3-essential",
      "plugin:vue/vue3-strongly-recommended",
      "plugin:vue/vue3-recommended",
      "eslint:recommended",
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "vue"
    ],
    "rules": {
      "vue/multi-word-component-names": "off",
      "semi": [
        "error",
        "always"
      ],
      "max-len": [
        "error",
        120
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-html/vue"
    ],
    "rules": {
      "no-empty-source": null
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
