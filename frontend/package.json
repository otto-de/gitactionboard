{
  "name": "gitactionboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vite dev",
    "start-mock-api-server": "mockoon-cli start -D --data mock-data/data.json",
    "serve-with-mock-data": "concurrently --kill-others \"npm run start-mock-api-server\" \"npm run serve\" ",
    "build": "vite build",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint --ext .js,.vue --no-fix --max-warnings 0 . && stylelint '**/*.vue'",
    "lint:fix": "eslint --ext .js,.vue --fix . && stylelint '**/*.vue' --fix"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^3.2.0",
    "vite": "^3.2.2",
    "vue": "^3.2.41",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@mockoon/cli": "^2.2.1",
    "@vitest/coverage-c8": "^0.24.3",
    "@vue/test-utils": "^2.2.1",
    "concurrently": "^7.5.0",
    "eslint": "^8.26.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-vue": "^9.7.0",
    "jest-serializer-vue-tjw": "^3.19.0",
    "jsdom": "^20.0.2",
    "postcss-html": "^1.5.0",
    "stylelint": "^14.14.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^29.0.0",
    "vitest": "^0.24.5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "plugin:vue/base",
      "plugin:vue/vue3-essential",
      "plugin:vue/vue3-strongly-recommended",
      "plugin:vue/vue3-recommended",
      "eslint:recommended",
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "vue"
    ],
    "rules": {
      "vue/multi-word-component-names": "off",
      "semi": [
        "error",
        "always"
      ],
      "max-len": [
        "error",
        120
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-html/vue"
    ],
    "rules": {
      "no-empty-source": null
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
